<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F7F7"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Kasus Covid Indonesia"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tanggalK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="aaaaaaaaaaaaaaaa" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_judul_positif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Positif"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_penambahan_positif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_judul_positif"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                    <TextView
                        android:id="@+id/tv_total_positif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_penambahan_positif"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_judul_meninggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meninggal"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_penambahan_meninggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_judul_meninggal"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                    <TextView
                        android:id="@+id/tv_total_meninggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_penambahan_meninggal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_judul_sembuh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sembuh"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_penambahan_sembuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_judul_sembuh"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                    <TextView
                        android:id="@+id/tv_total_sembuh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_penambahan_sembuh"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_judul_dirawat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirawat"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_penambahan_dirawat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_judul_dirawat"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                    <TextView
                        android:id="@+id/tv_total_dirawat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_penambahan_dirawat"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Vaksinasi Covid Indonesia"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tanggalV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="aaaaaaaaaaaaaaaa" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_judul_vaksinasi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaksinasi ke 1"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_penambahan_vaksinasi1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_judul_vaksinasi1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                    <TextView
                        android:id="@+id/tv_total_vaksinasi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_penambahan_vaksinasi1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_judul_vaksinasi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaksinasi ke 2"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_penambahan_vaksinasi2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_judul_vaksinasi2"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                    <TextView
                        android:id="@+id/tv_total_vaksinasi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_penambahan_vaksinasi2"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="aaaaaaaaaaaaaaaa" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>